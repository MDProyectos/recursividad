using System;

namespace sumar
{
    class Program
    {
        static int sum(int n)
        {
            int total = 0;
            for(int i = 0; i <= n; i++)
            {
                total = i + total;
            }
            return total;

        }
        static void Main(string[] args)
        {

            Console.WriteLine(sum(3));
        }
    }
}
